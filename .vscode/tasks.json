{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make project",
            "command": "make",
            "args": [
                "--directory=${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}